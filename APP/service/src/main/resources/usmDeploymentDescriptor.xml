        <feature>
            <name>LIST_REPORTS</name>
            <description>allows user to see Reporting tab and list reports</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>SHARE_REPORT_SCOPE</name>
            <description>allows user to share reports within current user context/scope</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>SHARE_REPORT_PUBLIC</name>
            <description>allows user to share reports globally</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>CREATE_REPORT</name>
            <description>allows user to create report</description>
            <group>reporting</group>
        </feature>
        <feature>
            <name>MANAGE_ALL_REPORTS</name>
            <description>allows user to delete, edit, share/unshare (private, scope or globally) reports, no matter if he is the owner or not</description>
            <group>reporting</group>
        </feature>
		<feature>
            <name>PRINT_REPORT</name>
            <description>Allows user to print reports</description>
            <group>reporting</group>
        </feature>
		<feature>
            <name>EXPORT_VMS_REPORT_DATA</name>
            <description>Allows user to export VMS data of a report</description>
            <group>reporting</group>
        </feature>

        <option>
            <name>DEFAULT_REPORT_ID</name>
            <description>Default user report id</description>
            <dataType>STRING</dataType>
            <defaultValue></defaultValue>
        </option>

    </application>
</ns2:deployApplicationRequest>